<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <h1>Edit <%= item.name %>
    </h1>
    <form action="/items/<%= item.id %>/update" method="POST">
        <label>Name: <input type="text" name="name" value="<%= item.name %>" required></label><br>
        <label>Description: <textarea name="description"><%= item.description %></textarea></label><br>
        <label>Price: <input type="number" step="0.01" name="price" value="<%= item.price %>" required></label><br>
        <label>Stock: <input type="number" name="stock" value="<%= item.stock_qty %>"></label><br>

        <label>Category:
            <select name="category_id">
                <% categories.forEach(cat=> { %>
                    <option value="<%= cat.id %>" <%=cat.id===item.category_id ? 'selected' : '' %> >
                        <%= cat.name %>
                    </option>
                    <% }) %>
            </select>
        </label><br>

        <p><strong>Confirm with Admin Password:</strong></p>
        <input type="password" name="admin_password" required>
        <br><br>
        <button type="submit">Save Changes</button>
    </form>
    <a href="/categories">Cancel</a>
</body>

</html>