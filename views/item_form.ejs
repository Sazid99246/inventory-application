<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <h1>
        <%= title %>
    </h1>
    <form action="/items/create" method="POST">
        <label>Item Name: <input type="text" name="name" required></label><br><br>

        <label>Description: <textarea name="description"></textarea></label><br><br>

        <label>Price: <input type="number" step="0.01" name="price" required></label><br><br>

        <label>Stock: <input type="number" name="stock" value="0"></label><br><br>

        <label>Category:
            <select name="category_id" required>
                <% categories.forEach(cat=> { %>
                    <option value="<%= cat.id %>">
                        <%= cat.name %>
                    </option>
                    <% }) %>
            </select>
        </label><br><br>

        <button type="submit">Save Item</button>
    </form>
    <br>
    <a href="/categories">Cancel</a>
</body>

</html>